<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/kullaniciAdi"
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="680dp"
        android:background="@drawable/edit_round"
        android:drawableStart="@drawable/user"
        android:hint="@string/kullanici_adinizi_yaziniz"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifre"
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_below="@id/kullaniciAdi"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="552dp"
        android:background="@drawable/edit_round"
        android:drawableStart="@drawable/lock"
        android:hint="Şifrenizi Yazınız"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btngiris_yap"
        android:layout_width="278dp"
        android:layout_height="58dp"
        android:layout_below="@id/sifre"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round"
        android:text="Giris Yap"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnkayit_ol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifre" />

    <Button
        android:id="@+id/btnkayit_ol"
        android:layout_width="232dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="759dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="66dp"
        android:background="@color/todobackground"
        android:shadowColor="@color/todoLoginpage"
        android:text="Hesabınız Yoksa Kayıt Olunuz "
        android:textAllCaps="false"
        android:textColor="#0F1FFC"
        android:textSize="11sp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>