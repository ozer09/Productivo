<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".gorev_sil">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="161dp"
        android:background="@drawable/gorev_sil"
        android:text="@string/gorev_sil"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/listViewGorevler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewGorevler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="57dp"
        android:background="@color/todoMainPageYapilacaklar"
        android:choiceMode="multipleChoice"
        app:layout_constraintBottom_toTopOf="@+id/gorev_sil_geri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonGorevSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gorev_sil"
        android:text="@string/gorev_sil"
        app:layout_constraintBaseline_toBaselineOf="@+id/gorev_sil_geri"
        app:layout_constraintEnd_toStartOf="@+id/gorev_sil_geri"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gorev_sil_geri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        android:background="@drawable/edit_round"
        android:text="@string/geri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGorevSil"
        app:layout_constraintTop_toBottomOf="@+id/listViewGorevler" />

</androidx.constraintlayout.widget.ConstraintLayout>
